{
	"name": "Save Image As",
	"description": "This extension allows you to download any image and save it as a specific type.",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "background": {
        "service_worker": "downloadAndSave.js"
    },
    "permissions": [
        "contextMenus",
		"downloads"
    ],
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["downloader.html"],
        "use_dynamic_url": true
      }]
}